<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/nb.theme.background"
	android:padding="0dp"
	android:layout_margin="0dp"
	android:orientation="vertical">

	<include layout="@layout/toolbar"/>

	<android.support.design.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/first_coordinator_layout"
		android:layout_width="match_parent"
		android:padding="0dp"
		android:layout_margin="0dp"
		android:background="@color/common_gray"
		android:layout_height="match_parent">

		<WebView
			android:id="@+id/webview1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="45dp"
			>
		</WebView>

		<android.support.design.widget.FloatingActionButton
			android:id="@+id/floatingactionButton"
			android:src="@drawable/icons8_menu_96"
			android:tint="@color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:padding="0dp"
			android:layout_marginRight="20dp"
			android:layout_marginBottom="80dp"/>


		<RelativeLayout
			android:id="@+id/cover_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentBottom="true"
			android:alpha="0.4"
			android:background="#000000"
			android:clickable="true"></RelativeLayout>



		<LinearLayout
			android:id="@+id/settingBar"
			android:layout_width="fill_parent"
			android:layout_height="150dp"
			android:layout_gravity="bottom|center"
			android:layout_marginBottom="0dp"
			android:background="@color/common_gray"
			android:orientation="vertical">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="50dp"
				android:layout_gravity="bottom|center"
				android:orientation="horizontal">
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnColor1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="@color/white"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnColor2"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="#EDFFD0"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:textColor="@color/white" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnColor3"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="#E0CDB6"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnColor4"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="#B7CFC2"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:textColor="@color/white" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnColor5"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="#D1D1D1"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:textColor="@color/white" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="50dp"
				android:layout_gravity="bottom|center"
				android:orientation="horizontal">
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnFont1"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="@color/white"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:textSize="17dp"
						android:text="A-"
						android:textColor="@color/bb_darkBackgroundColor"
						/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_weight="1"
					android:gravity="center">
					<Button
						android:id="@+id/btnFont2"
						style="@style/Widget.AppCompat.Button.Colored"
						android:layout_width="0dp"
						android:layout_height="50dp"
						android:layout_weight="1"
						android:backgroundTint="#EDFFD0"
						android:paddingBottom="5dp"
						android:paddingLeft="20dp"
						android:paddingRight="20dp"
						android:textSize="20dp"
						android:text="A+"
						android:textColor="@color/bb_darkBackgroundColor" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottomBar"
			android:layout_width="fill_parent"
			android:layout_height="55dp"
			android:layout_gravity="bottom|center"
			android:layout_marginBottom="0dp"
			android:background="@color/common_gray"
			android:orientation="horizontal"
			tools:layout_editor_absoluteY="456dp">
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center">
				<ImageButton
					android:id="@+id/btnPreChapter"
					style="@style/Widget.AppCompat.Button.Borderless"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:backgroundTint="#ffffff"
					android:paddingBottom="5dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:text="前の話"
					android:src="@drawable/icons8_back_50"
					android:textColor="@color/bb_darkBackgroundColor" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center">
				<ImageButton
					android:id="@+id/btnNextChapter"
					style="@style/Widget.AppCompat.Button.Borderless"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:backgroundTint="#EDFFD0"
					android:paddingBottom="5dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:text="次の話"
					android:src="@drawable/icons8_forward_50"
					android:textColor="@color/bb_darkBackgroundColor" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center">
				<ImageButton
					android:id="@+id/btnSetting"
					style="@style/Widget.AppCompat.Button.Borderless"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:backgroundTint="#B7CFC2"
					android:paddingBottom="5dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:text="設定"
					android:src="@drawable/icons8_fontsize_50"
					android:textColor="@color/bb_darkBackgroundColor" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center">

				<ImageButton
					android:id="@+id/btnChapters"
					style="@style/Widget.AppCompat.Button.Borderless"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:backgroundTint="#E0CDB6"
					android:paddingBottom="5dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:text="目次"
					android:src="@drawable/icons8_menu_48"
					android:textColor="@color/bb_darkBackgroundColor" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center">
				<ImageButton
					android:id="@+id/btnClose"
					style="@style/Widget.AppCompat.Button.Borderless"
					android:layout_width="0dp"
					android:layout_height="50dp"
					android:layout_weight="1"
					android:backgroundTint="#D1D1D1"
					android:paddingBottom="5dp"
					android:paddingLeft="20dp"
					android:paddingRight="20dp"
					android:text="閉じる"
					android:src="@drawable/icons8_close_50"
					android:textColor="@color/bb_darkBackgroundColor" />
			</LinearLayout>
		</LinearLayout>


		<android.support.v4.widget.DrawerLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/mDrawerLayout"
			android:layout_width="280dp"
			android:layout_height="match_parent"
			android:layout_alignParentBottom="true"
			android:layout_gravity="left"
			android:alpha="1"
			android:background="@color/webview_bottom_button2"
			tools:openDrawer="right">
			<FrameLayout
				android:id="@+id/content_frame"
				android:layout_width="280dp"
				android:layout_height="match_parent" />
			<android.support.v7.widget.RecyclerView
				android:id="@+id/mChaptersView"
				android:layout_width="280dp"
				android:layout_height="wrap_content"
				android:divider="#ce0404"
				android:dividerHeight="0sp"
				android:foregroundGravity="center" />
		</android.support.v4.widget.DrawerLayout>

	</android.support.design.widget.CoordinatorLayout>
</LinearLayout>


